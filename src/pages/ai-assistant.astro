---
import Layout from "../layouts/Layout.astro";
---

<Layout title="AI Assistant - EcoWatch">
  <div id="ai-assistant-root"></div>
</Layout>

<script>
  import { createElement } from "react";
  import { createRoot } from "react-dom/client";
import AIAssistantPage from "../components/api/AIAssistantPage";

  const container = document.getElementById("ai-assistant-root");
  if (container) {
    const root = createRoot(container);
    root.render(createElement(AIAssistantPage));
  }
</script>
