---
import DashboardStats from "../../components/dashboard/DashboardStats";
import RecentActivity from "../../components/dashboard/RecentActivity";
import Base from "../../components/layout/Base";
import MapContainer from "../../components/map/MapContainer";
import Layout from "../../layouts/Layout.astro";


---

<Layout>
  <Base client:load>
    <div class="space-y-6">
      {/* Page Header */}
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
            Tableau de bord
          </h1>
          <p class="text-gray-600 dark:text-gray-400 mt-1">
            Vue d'ensemble de votre surveillance environnementale
          </p>
        </div>
        <div class="flex items-center space-x-3">
          <button
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700"
          >
            Exporter
          </button>
          <button
            class="px-4 py-2 text-sm font-medium text-white bg-primary-600 border border-transparent rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
          >
            Nouvelle analyse
          </button>
        </div>
      </div>

      {/* Stats */}
      <DashboardStats client:load />

      {/* Main Content Grid */}
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {/* Map */}
        <div class="lg:col-span-2">
          <div
            class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6"
          >
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                Carte interactive
              </h3>
              <button
                class="text-sm text-primary-600 hover:text-primary-700 dark:text-primary-400"
              >
                Plein écran
              </button>
            </div>
            <div class="h-96">
              <MapContainer client:load />
            </div>
          </div>
        </div>

        {/* Recent Activity */}
        <div class="lg:col-span-1">
          <RecentActivity client:load />
        </div>
      </div>

      {/* Additional Charts/Widgets */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div
          class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6"
        >
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            Tendances climatiques
          </h3>
          <div
            class="h-64 flex items-center justify-center text-gray-500 dark:text-gray-400"
          >
            Graphique des tendances climatiques
          </div>
        </div>

        <div
          class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6"
        >
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            Alertes récentes
          </h3>
          <div
            class="h-64 flex items-center justify-center text-gray-500 dark:text-gray-400"
          >
            Liste des alertes récentes
          </div>
        </div>
      </div>
    </div>
  </Base>
</Layout>
