---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="EcoWatch">
  <div id="forgot-password-root"></div>
</Layout>

<script>
  import { ForgotPasswordPage } from "../../components/auth/ForgotPasswordPage";
  import { TitleUpdater } from "../../components/common/TitleUpdater";
  import { createRoot } from "react-dom/client";
  import { createElement, Fragment } from "react";

  const container = document.getElementById("forgot-password-root");
  if (container) {
    const root = createRoot(container);
    root.render(
      createElement(
        Fragment,
        null,
        createElement(TitleUpdater, { titleKey: "forgotPasswordPageTitle" }),
        createElement(ForgotPasswordPage)
      )
    );
  }
</script>
