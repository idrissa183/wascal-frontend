---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Datasets - EcoWatch">
  <div id="datasets-root"></div>
</Layout>

<script>
  import { DatasetsPage } from "../components/datasets/DatasetsPage";
  import React from "react";
  import { createRoot } from "react-dom/client";

  const container = document.getElementById("datasets-root");
  if (container) {
    const root = createRoot(container);
    root.render(React.createElement(DatasetsPage));
  }
</script>